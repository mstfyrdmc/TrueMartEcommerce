@model List<AppUser>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class=" container">
    <br />
    <br />
    <h2>Kullanıcı Listesi</h2>
    <br />
    @Html.ActionLink("Yeni Kayıt", "Insert", "AppUser", null, new { @class = "btn btn-default" })

    @Html.ActionLink("İletişim Bilgileri", "Index", "ContactInfo", null, new { @class = "btn btn-default" })


    <table class="table table-hover">
        <thead>
            <tr>

                <th>Adı</th>
                <th>Soyadı</th>
                <th>Kullanıcı Adı</th>
                <th>Cinsiyeti</th>
                <th>E-Mail Adresi</th>
                <th>Şifresi</th>
                <th>Doğum Tarihi</th>
                <th>İl</th>
                <th>İlçe</th>

                <th>Durum</th>
                <th>Adminlik Durumu</th>
                <th>Oluşturulma Tarihi</th>
                <th>Oluşturulma IP</th>
                <th>Güncellenme Tarihi</th>
                <th>Güncellenme IP</th>
                <th>######</th>
            </tr>
        </thead>
        <tbody>
            @foreach (AppUser item in Model)
            {
                <tr>

                    <td>@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.UserName</td>
                    <td>@item.Sex</td>
                    <td>@item.EmailAdress</td>
                    <td>@item.Password</td>
                    <td>@item.BirthDate</td>

                    <td>@(item.Province != null ? item.Province.ProvinceName : "-")</td>
                    <td>@(item.Town != null ? item.Town.TownName : "-")</td>



                    <td>@item.Status</td>
                    <td>@item.IsAdmin</td>
                    <td>@item.CreatedDate</td>
                    <td>@item.CreatedIP</td>
                    <td>@item.ModifiedDate</td>
                    <td>@item.ModifiedIP</td>
                    <td>
                        @Html.ActionLink("Güncelle", "Update", "AppUser", new { id = item.ID }, new { @class = "btn btn-default" })

                        @Html.ActionLink("Sil", "Delete", "AppUser", new { id = item.ID }, new { @class = "btn btn-default" })

                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
