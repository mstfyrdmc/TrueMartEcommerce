@model AppUser
@{
    /**/

    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <br />
    <br />
    <h2>Kullanıcı Ekle</h2>

    @using (Html.BeginForm("Insert", "AppUser", FormMethod.Post))
    {
        <div class="form-group">
            <label for="username">Kullanıcı Adı:</label>
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="name">Adı:</label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="surname">Soyadı:</label>
            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label for="sex">Cinsiyeti:</label>
            @Html.DropDownListFor(m => m.Sex, new SelectList(Enum.GetValues(typeof(Model.Entities.Enum.Sex))), "Cinsiyet")
        </div>
        <div class="form-group">
            <label for="email">Email Adresi:</label>
            @Html.TextBoxFor(m => m.EmailAdress, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="birthdate">Doğum Tarihi:</label>
            @Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control", @type = "date" })
        </div>


        <div class="form-group">
            <label for="birthdate">İl:</label>
            @Html.DropDownList("ProvinceID", null, "", htmlAttributes: new { @class = "form form-control" })
        </div>

        <div class="form-group">
            <label for="birthdate">İlçe:</label>
            @Html.DropDownList("TownID", null, "", htmlAttributes: new { @class = "form form-control" })
        </div>

        <div class="form-group">
            <label for="password">Şifre:</label>
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password" })
        </div>


        <div class="form-group">
            <label for="admin">Admin:</label>
            @Html.CheckBoxFor(m => m.IsAdmin, new { @class = "form-control", @style = "margin-left:-120px;" })

        </div>

        <button type="submit" class="btn btn-default">Kaydet</button>
    }
</div>
