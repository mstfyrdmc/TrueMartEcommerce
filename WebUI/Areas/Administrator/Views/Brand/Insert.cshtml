@model Brand
@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <br />
    <br />
    <h2>Marka Ekleme</h2>

    @using (Html.BeginForm("Insert", "Brand", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

    <div class="form-group">
        <label for="username">Marka Adı:</label>
        @Html.TextBoxFor(m => m.BrandName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.BrandName, "Marka adı girmek zorunludur", new { @class = "text-danger" })
    </div>
        <div class="form-group">
            <label for="username">Açıklaması:</label>
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label for="image">Resim:</label>
            <input type="file" name="fluResim" />
            @Html.ValidationMessageFor(m => m.ImagePath, "Marka Resmi eklemek zorunludur", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-default">Kaydet</button>
    }
</div>
