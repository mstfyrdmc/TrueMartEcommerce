@model SiteEmployee
@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <br />
    <br />
    <h2>Site Çalışanı Ekle</h2>
    @Html.HiddenFor(m => m.BirthDate)
    @Html.HiddenFor(m => m.HireDate)

    @using (Html.BeginForm("Insert", "SiteEmployee", FormMethod.Post))
    {

    <div class="form-group">
        <label for="name">Adı:</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })

        @Html.ValidationMessageFor(m => m.Name, "Çalışan adı girmek zorunludur", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="surname">Soyadı:</label>
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })

        @Html.ValidationMessageFor(m => m.LastName, "Çalışan soyadı girmek zorunludur", new { @class = "text-danger" })

    </div>
    <div class="form-group">
        <label for="surname">Uzmanlık Alanı:</label>
        @Html.TextBoxFor(m => m.Profession, new { @class = "form-control" })

        @Html.ValidationMessageFor(m => m.Profession, "Çalışan uzmanlık alanı girmek zorunludur", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="birthdate">Doğum Tarihi:</label>
        @Html.TextBoxFor(m => m.BirthDate, new { @class = "form-control", @type = "date" })

        @Html.ValidationMessageFor(m => m.BirthDate, "Çalışan doğum tarihi girmek zorunludur", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="birthdate">İş Başlangıcı Tarihi:</label>
        @Html.TextBoxFor(m => m.HireDate, new { @class = "form-control", @type = "date" })

        @Html.ValidationMessageFor(m => m.HireDate, "Çalışan iş başlangıç tarihi girmek zorunludur", new { @class = "text-danger" })
    </div>

        <div class="form-group">
            <label for="surname">İl:</label>
            @Html.DropDownListFor(m => m.ProvinceID, null, "", htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label for="surname">İlçe:</label>
            @Html.DropDownListFor(m => m.TownID, null, "", htmlAttributes: new { @class = "form-control" })
        </div>



        <button type="submit" class="btn btn-default">Kaydet</button>
    }

</div>

