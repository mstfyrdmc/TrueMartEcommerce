@model Category

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <br />
    <br />

    <h2>Kategori Güncelle</h2>

    @using (Html.BeginForm("Update", "Category", FormMethod.Post, new { encty = "multipart/form-data" }))
    {
        <div class="form-group">
            <label for="username">Kategori Adı:</label>
            @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="name">Açıklama:</label>
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="image">Resim:</label>
            <input type="file" name="fluResim" />
        </div>

        <button type="submit" class="btn btn-default">Güncelle</button>
    }


</div>
