@model Category

@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <br />
    <br />

    <h2>Kategori Ekle</h2>

    @using (Html.BeginForm("Insert", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    <div class="form-group">
        <label for="username">Kategori Adı:</label>
        @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CategoryName, "Kategori adı girmek zorunludur", new { @class = "text-danger" })
    </div>
        <div class="form-group">
            <label for="name">Açıklama:</label>
            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="image">Resim:</label>
            <input type="file" name="fluResim" />
            @Html.ValidationMessageFor(m => m.ImagePath, "Kategori resmi girmek zorunludur", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-default">Kaydet</button>
    }


</div>

