@model Town
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>İlçe Güncelle</h2>
<div class="container">
    <br />
    <br />
    @using (Html.BeginForm("Update", "Town", FormMethod.Post))
    {
        <div class="form-group">
            <label for="username">İl Adı:</label>
            @Html.DropDownList("ProvinceID", null, htmlAttributes: new { @class = "form form-control" })
        </div>
        <div class="form-group">
            <label for="username">İlçe Adı:</label>
            @Html.TextBoxFor(m => m.TownName, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-default">Güncelle</button>
    }

</div>

