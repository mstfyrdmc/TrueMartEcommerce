@model Town
@{
    /**/

    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <br />
    <br />
</div>
<h2>İlçe Ekleme</h2>

@using (Html.BeginForm("Insert", "Town", FormMethod.Post))
{
    <div class="form-group">
        <label for="username">İl Adı:</label>
        @Html.DropDownList("ProvinceID", null, "", htmlAttributes: new { @class = "form form-control" })

        @Html.ValidationMessageFor(m => m.ProvinceID, " İl adı seçmek zorunludur", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="username">İlçe Adı:</label>
    

        @Html.TextBoxFor(m => m.TownName, new { @class = "form-control" })

        @Html.ValidationMessageFor(m => m.TownName, "İlçe adı girmek zorunludur", new { @class = "text-danger" })

    </div>

    <button type="submit" class="btn btn-default">Kaydet</button>
}


    