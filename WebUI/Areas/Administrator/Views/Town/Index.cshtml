@model List<Town>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <br />
    <br />

    <h2>İlçe Ekleme</h2>


    @Html.ActionLink("Yeni Kayıt", "Insert", "Town", null, new { @class = "btn btn-default" })

    <table class="table table-hover">
        <thead>
            <tr>
                <th>İl Adı</th>
                <th>İlçe Adı</th>
                <th>Durum</th>
                <th>####</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Town item in Model)

            {
                <tr>
                    <td>@(item.ProvinceID != null ? item.Province.ProvinceName : "-")</td>
                    <td>@item.TownName</td>
                    <td>@item.Status</td>
                    <td>
                        @Html.ActionLink("Güncelle", "Update", "Town", new { id = item.ID }, new { @class = "btn btn-default" })

                        @Html.ActionLink("Sil", "Delete", "Town", new { id = item.ID }, new { @class = "btn btn-default" })

                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>
