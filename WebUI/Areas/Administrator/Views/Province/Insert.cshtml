@model Province
@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <br />
    <br />
    <h2>İl Ekle</h2>


    @using (Html.BeginForm("Insert", "Province", FormMethod.Post))
    {
        <div class="form-group">
            <label for="username">İl Adı:</label>
            @Html.TextBoxFor(m => m.ProvinceName, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-default">Kaydet</button>
    }

</div>

