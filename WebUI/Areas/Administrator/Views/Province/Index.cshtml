@model List<Province>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <br />
    <br />
    <h2>İl Listesi</h2>


    @Html.ActionLink("Yeni Kayıt", "Insert", "Province", null, new { @class = "btn btn-default" })

    <table class="table table-hover">
        <thead>
            <tr>
                <th>İl Adı</th>
                <th>Durum</th>
                <th>####</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Province item in Model)

            {
                <tr>
                    <td>@item.ProvinceName</td>
                    <td>@item.Status</td>
                    <td>
                        @Html.ActionLink("Güncelle", "Update", "Province", new { id = item.ID }, new { @class = "btn btn-default" })

                        @Html.ActionLink("Sil", "Delete", "Province", new { id = item.ID }, new { @class = "btn btn-default" })

                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

