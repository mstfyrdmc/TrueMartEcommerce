@model List<Shipper>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <br />
    <br />
    <h2>Kargo Listesi</h2>

    @Html.ActionLink("Yeni Kayıt", "Insert", "Shipper", null, new { @class = "btn btn-default" })

    @Html.ActionLink("İletişim Bilgileri", "Index", "ContactInfo", null, new { @class = "btn btn-default" })

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Şirket Adı</th>
                <th>Email Adresi</th>
                <th>İl</th>
                <th>İlçe</th>
                <th>Durum</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Shipper item in Model)


            {
                <tr>
                    <td>@item.ShipperName</td>
                    <td>@item.EmailAddress</td>
                    <td>@(item.Province != null ? item.Province.ProvinceName : "-")</td>
                    <td>@(item.Town != null ? item.Town.TownName : "-")</td>
                    <td>@item.Status</td>
                    <td>
                        @Html.ActionLink("Güncelle", "Update", "Shipper", new { id = item.ID }, new { @class = "btn btn-default" })

                        @Html.ActionLink("Sil", "Delete", "Shipper", new { id = item.ID }, new { @class = "btn btn-default" })

                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

