@model Shipper
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <br />
    <br />
    <h2>Kargo Firması Güncelleme</h2>

    @using (Html.BeginForm("Update", "Shipper", FormMethod.Post))
    {
        <div class="form-group">
            <label for="username">Şirket Adı:</label>
            @Html.TextBoxFor(m => m.ShipperName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="username">Email Adresi:</label>
            @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="name">İl Adı:</label>
            @Html.DropDownListFor(m => m.ProvinceID, null, "", htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="name">İlçe Adı:</label>
            @Html.DropDownListFor(m => m.TownID, null, "", htmlAttributes: new { @class = "form-control" })
        </div>
        @*<div class="form-group">
                <label for="username">İl:</label>
                @Html.TextBoxFor(m => m.Province.ProvinceName, new { @class = "form-control" })
            </div>*@

        @*<div class="form-group">
                <label for="username">İlçe:</label>
                @Html.TextBoxFor(m => m.Town.TownName, new { @class = "form-control" })
            </div>*@


        <button type="submit" class="btn btn-default">Güncelle</button>
    }
</div>

