@model BankCard
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!doctype html>
<html class="no-js" lang="zxx">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Register || Truemart Responsive Html5 Ecommerce Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

</head>
<body>
    <!-- Main Wrapper Start Here -->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="register-title">
                    <h3 class="mb-10">Kredi Kart Bilgileri Güncelle</h3>
                </div>
            </div>
        </div>
        @using (Html.BeginForm("Update", "BankCard", FormMethod.Post))
        {
            <div class="row">
                <div class="col-sm-12">
                    <form class="form-register" action="#">
                        <fieldset>
                            <legend>Kredi Kartı Bilgilerim</legend>
                            
                            <div class="form-group d-md-flex align-items-md-center">
                                <label class="control-label col-md-2" for="l-name"><span class="require">*</span>Kart Sahibi Adı</label>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.CardOwnerName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group d-md-flex align-items-md-center">
                                <label class="control-label col-md-2" for="l-name"><span class="require">*</span>Kart Sahibi Soyadı</label>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.CardOwnerLastName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group d-md-flex align-items-md-center">
                                <label class="control-label col-md-2" for="email"><span class="require">*</span>Kart No</label>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.CardNo, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group d-md-flex align-items-md-center">
                                <label class="control-label col-md-2" for="email"><span class="require">*</span>CVC</label>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.CardCVC, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group d-md-flex align-items-md-center">
                                <label class="control-label col-md-2" for="email"><span class="require">*</span>Kart Son Kullanma Tarihi</label>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.BestBeforeDate, new { @class = "form-control", @type = "date" })
                                </div>
                            </div>
                            
                            
                        </fieldset>
                        

                        <div class="terms">
                            <div class="float-md-right">

                                <input type="submit" value="Kaydet" class="return-customer-btn">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        }

        <!-- Row End -->
        <!-- Row End -->
    </div>
    <!-- Container End -->
</body>
</html>

